{
  "name": "map_sample",
  "title": "Map Sample",
  "summary": "Maps reads to a reference genome",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "project_id",
      "label": "Project ID",
      "class": "string",
      "optional": false
    },
    {
      "name": "output_folder",
      "label": "Output folder",
      "class": "string",
      "optional": false
    },
    {
      "name": "fastq_files",
      "label": "FASTQ files (read 1)",
      "class": "array:file",
      "patterns": ["*.fq.gz", "*.fastq.gz", "*.fastq"],
      "optional": false
    },
    {
      "name": "genome_fasta_file",
      "label": "Genome FASTA file",
      "class": "file",
      "patterns": ["genome.fa.gz"],
      "optional": false
    },
    {
      "name": "genome_index_file",
      "label": "Genome index file",
      "class": "file",
      "patterns": ["bwa_index.tar.gz"],
      "optional": false
    },
    {
      "name": "mapper",
      "label": "Mapper",
      "class": "string",
      "optional": false,
      "default": "bwa",
      "choices": [
        "bwa",
        "bwa_aln",
        "bwa_mem"
      ]
    },
    {
      "name": "fastq_files2",
      "label": "FASTQ files (read 2)",
      "class": "array:file",
      "patterns": ["*.fq.gz", "*.fastq.gz"],
      "optional": true
    },
    {
      "name": "sample_name",
      "label": "Sample name",
      "class": "string",
      "optional": true,
      "default": "sample"
    },
    {
      "name": "mark_duplicates",
      "label": "Mark Duplicates",
      "class": "boolean",
      "optional": true,
      "default": false
    },
    {
      "name": "properties",
      "label": "Properties",
      "class": "hash",
      "optional": true,
      "default": {}
    }
  ],
  "outputSpec": [
    {
      "name": "bam",
      "label": "BAM file",
      "class": "file"
    },
    {
      "name": "bai",
      "label": "BAI file",
      "class": "file"
    },
    {
      "name": "tools_used",
      "label": "JSON file with tools and command lines used in this module.",
      "class": "file"
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "openjdk-6-jre-headless"
      }
    ],
    "systemRequirementsByRegion": {
      "azure:westus": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x16"
        }
      }
    },
    "systemRequirements": {
      "*": {
        "instanceType": "azure:mem2_ssd1_x16"
      }
    },
    "file": "src/code.py",
    "release": "14.04",
    "interpreter": "python2.7",
    "restartableEntryPoints": "all",
    "executionPolicy": {"restartOn": {"JMInternalError": 2, "ExecutionError": 2, "UnresponsiveWorker": 5}},
    "distribution": "Ubuntu"
  },
  "access": {
    "allProjects": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "details": {
    "commit": "1.3-4-g1f0d755",
    "version": "1.3.1",
    "name": "map_sample",
    "branch": "master",
    "date_created": "2016-10-20"
  }
}
